{
  "productName": "tari-universe",
  "version": "0.0.0",
  "identifier": "universe.tari",
  "build": {
    "beforeDevCommand": "yarn run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tari Universe",
        "width": 800,
        "height": 600,
        "label": "main"
      },
      {
        "title": "Tari Universe - Error",
        "label": "error",
        "width": 600,
        "height": 200,
        "visible": false,
        "url": "../error_page.html"
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../dist-isolation"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["wallet_daemon.config.toml", "./log4rs/universe_sample.yml"]
  }
}
